# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=student_feedback_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS Configuration - Make sure this includes your frontend URL
# Note: CSRF protection is disabled for all API endpoints since we use JWT token-based authentication
CORS_ORIGINS=https://sjcet-feedback-portal.netlify.app,http://localhost:3000,http://localhost:5173

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Environment
ENVIRONMENT=production
RENDER=true

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
